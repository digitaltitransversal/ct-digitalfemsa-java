<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <servers>
        <!-- GH SERVERS -->
        <server>
            <id>github</id>
            <username>$GITHUB_USERNAME_PACKAGES</username>
            <password>$GITHUB_PASSWORD_PACKAGES</password>
        </server>
        <server>
            <id>gpg.passphrase</id>
            <passphrase>$MAVEN_GPG_PASSPHRASE</passphrase>
        </server>
    </servers>
    <profiles>
        <!-- GH PROFILE -->
        <profile>
            <id>github</id>
            <repositories>
                <repository>
                    <id>github</id>
                    <url>https://maven.pkg.github.com/digitaltitransversal/packages/</url>
                    <layout>default</layout>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>central</id>
                    <url>https://repo1.maven.org/maven2</url>
                </repository>
            </repositories>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>github</activeProfile>
    </activeProfiles>
</settings>
